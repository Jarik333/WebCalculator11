@model EFDataApp.Models.Operation
@{
    ViewBag.Title = "Добавление операции";
}
<form asp-action="add" asp-controller="home">
    <div class="form-group">
        <label asp-for="Expression" class="control-label"> Выражение</label>
        <input type="text" asp-for="Expression" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Result" class="control-label">Ответ</label>
        <input type="number" asp-for="Result" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата</label>
        <input type="datetime" asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IP" class="control-label">IP</label>
        <input type="url" asp-for="IP" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Browser" class="control-label">Браузер</label>
        <input type="text" asp-for="Browser" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Error" class="control-label">Ошибка</label>
        <input type="text" asp-for="Error" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>